@model IEnumerable<stellarCinema.Entities.Hall>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HallName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalSeats)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HallName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSeats)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdHall">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdHall">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdHall">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
