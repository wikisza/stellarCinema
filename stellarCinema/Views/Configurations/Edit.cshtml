@model stellarCinema.Entities.Configuration

@{
    ViewData["Title"] = "Zmiana ceny";
}

<h1>Cena jednego miejsca</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label>Cena</label>
                <input type="number" asp-for="KeyValue" />
                <span asp-validation-for="KeyValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="EmployeePanel" asp-controller="Home" class="more">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
